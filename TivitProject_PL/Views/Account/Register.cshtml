@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
    //Layout = "~/Views/Shared/_LayoutOrigin.cshtml";
    //Layout = "~/Views/Shared/_LayoutSidebar.cshtml";

}




<div class="row">
    <h3><b>Kayıt olabilirsiniz</b></h3>
    <div>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group" style="width:75%;">
                <label>İsim</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>

            <div class="form-group" style="width:75%;">
                <label>Soyisim</label>
                <input type="text" class="form-control" asp-for="Surname" />
            </div>
            <div class="form-group" style="width:75%;">
                <label>Email:</label>
                <input type="email" class="form-control" asp-for="Email" />
            </div>
            <div class="form-group" style="width:75%;">
                <label>Kullanıcı Adı:</label>
                <input type="text" class="form-control" asp-for="Username" />
            </div>

            <div class="form-group" style="width:75%;">
                <label>Doğum Günü:</label>
                <input type="date" class="form-control" asp-for="BirthDate" />
            </div>
            <div class="form-group" style="width:75%;">
                <label>Şifre:</label>
                <input type="password" class="form-control" asp-for="Password" />
            </div>
            <div class="form-group" style="width:75%;">
                <label>Şifre Tekrar:</label>
                <input type="password" class="form-control" asp-for="PasswordConfirm" />
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">KAYIT OL</button>
                <a asp-controller="Account" asp-action="Login">Zaten üye misiniz?</a>
            </div>

        </form>
    </div>
</div>
